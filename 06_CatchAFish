        private void fish_MouseEnter(object sender, EventArgs e)
        {
            Random r = new Random();
            int x = r.Next(ClientSize.Width - fish.Width);
            int y = r.Next(ClientSize.Height - fish.Height);
            this.fish.Location = new System.Drawing.Point(x, y);
        }
