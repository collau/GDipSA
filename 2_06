// Set EventHandler (form1.cs)

using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace IceCreamParlour2_5
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnOrder_Click(object sender, EventArgs e)
        {
            string s;
            string f;
            string t;

            if (optSmall.Checked == true)
                s = "small";
            else if (optMedium.Checked == true)
                s = "medium";
            else
                s = "large";

            if (fChoc.Checked == true)
                f = "chocolate";
            else
                f = "strawberry";

            if (!chkNuts.Checked && !chkRaisins.Checked && !chkChocolateChips.Checked)
            {
                t = " with no toppings";
            }
            else
            {
                t = " with toppings:";
                if (chkNuts.Checked)
                    t += " Nuts";
                if (chkRaisins.Checked)
                    t += " Raisins";
                if (chkChocolateChips.Checked)
                    t += " Chocolate Chips";
            }
            MessageBox.Show("A " + s + " " + f + " ice cream" + t + " has been ordered!");
        }
    }
}
