        private void button1_MouseUp(object sender, MouseEventArgs e)
        {
            Random r = new Random();
            int x = r.Next(ClientSize.Width - button1.Width);
            int y = r.Next(ClientSize.Height - button1.Height);

            this.button1.Image = Image.FromFile(@"F:\GDipSA\UIVSC\Image\happyRabbit.GIF");
            this.button1.Location = new System.Drawing.Point(x, y);
        }

        private void button1_MouseDown(object sender, MouseEventArgs e)
        {
            this.button1.Image = Image.FromFile(@"F:\GDipSA\UIVSC\Image\sadRabbit.GIF");
        }
    }
